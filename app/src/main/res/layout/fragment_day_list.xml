<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="com.e_overhaul.android.stats.DayListFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/SundayListItem"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"
        android:onClick="openSundayDayDetails"
        android:text="Sunday"
        android:clickable="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/MondayListItem"
        android:layout_below="@+id/SundayListItem"
        android:textSize="40dp"
        android:layout_centerHorizontal="true"
        android:onClick="openMondayDayDetails"
        android:text="Monday"
        android:clickable="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/TuesdayListItem"
        android:layout_below="@+id/MondayListItem"
        android:textSize="40dp"
        android:layout_centerHorizontal="true"
        android:onClick="openTuesdayDayDetails"
        android:text="Tuesday"
        android:clickable="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/WednesdayListItem"
        android:layout_below="@+id/TuesdayListItem"
        android:textSize="40dp"
        android:layout_centerHorizontal="true"
        android:onClick="openWednesdayDayDetails"
        android:text="Wednesday"
        android:clickable="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/ThursdayListItem"
        android:layout_below="@+id/WednesdayListItem"
        android:textSize="40dp"
        android:layout_centerHorizontal="true"
        android:onClick="openThursdayDayDetails"
        android:text="Thursday"
        android:clickable="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/FridayListItem"
        android:layout_below="@+id/ThursdayListItem"
        android:layout_centerHorizontal="true"
        android:onClick="openFridayDayDetails"
        android:text="Friday"
        android:clickable="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/SaturdayListItem"
        android:layout_below="@+id/FridayListItem"
        android:layout_centerHorizontal="true"
        android:onClick="openSaturdayDayDetails"
        android:text="Saturday"
        android:clickable="true"
        />


</RelativeLayout>
